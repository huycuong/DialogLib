<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextAppearance">@style/ToolBarTitle</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-condense</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RoundedDialog">
        <item name="android:background">@drawable/dialog_btn_rounded</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AlertDialog.AppCompat.CircleBackground">
        <item name="android:background">@drawable/dialog_circle</item>
    </style>

    <style name="TwoRoundedDialogCancel">
        <item name="android:background">@drawable/ripple_effect_button_disable</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TwoRoundedDialogOk">
        <item name="android:background">@drawable/ripple_effect_button_share</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>